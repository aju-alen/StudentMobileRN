generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
   url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

// Enums
enum UserType {
  STUDENT
  TEACHER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum ReportStatus {
  PENDING
  RESOLVED
}

enum MessageSenderType {
  STUDENT
  TEACHER
}

// Core authentication and shared fields
model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  password            String
  name                String
  verified            Boolean  @default(false)
  verificationToken   String?
  profileImage        String?
  userDescription     String   @default("No description provided")
  hasSeenOnboarding   Boolean  @default(false)
  userType            UserType
  createdAt           DateTime @default(now())
  
  // Relations - one of these will be populated based on userType
  studentProfile      StudentProfile?
  teacherProfile      TeacherProfile?
  adminProfile        AdminProfile?
}

// Student-specific data
model StudentProfile {
  id                  String   @id @default(cuid())
  userId              String   @unique
  recommendedBoard    String?
  recommendedGrade    Int?
  reccomendedSubjects Json     @default("[]")
  
  // Relations
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews             Review[]
  sentConversations   Conversation[] @relation("StudentConversations")
  communityMemberships CommunityUser[]
  savedSubjects       SavedSubject[]
  reviewVotes         ReviewVote[]
  blockedTeachers     BlockedTeacher[] @relation("BlockingStudent")
  reports             Report[]
  stripePurchases     StripePurchases[]
  bookings            Booking[] @relation("StudentBookings")
  userSubjects        UserSubject[]
}

// Teacher-specific data
model TeacherProfile {
  id                     String        @id @default(cuid())
  userId                 String        @unique
  zoomAccountCreated     Boolean       @default(false)
  zoomUserAcceptedInvite Boolean       @default(false)
  isTeamLead             Boolean       @default(false)
  organizationId         String?
  
  // Relations
  user                   User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjects               Subject[]
  clientConversations    Conversation[] @relation("TeacherConversations")
  blockedByStudents      BlockedTeacher[] @relation("BlockedTeacher")
  bookings               Booking[]     @relation("TeacherBookings")
  organization           Organization? @relation("OrganizationMembers", fields: [organizationId], references: [id])
  ledOrganization        Organization? @relation("OrganizationLead")
  communityMemberships   CommunityUser[]
  communityMessages      CommunityMessage[]
}

// Admin-specific data
model AdminProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  role        String   @default("SUPERADMIN")
  permissions Json     @default("[]")
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Organization model
model Organization {
  id              String    @id @default(cuid())
  orgName         String
  orgWebsite      String?
  orgLicense      String?
  orgCapacity     Int       @default(3)
  orgInvite       String?   @unique
  teamLeadId      String    @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relations
  teamLead        TeacherProfile   @relation("OrganizationLead", fields: [teamLeadId], references: [id], onDelete: Restrict)
  members         TeacherProfile[] @relation("OrganizationMembers")
}

model Subject {
  id                   String   @id @default(cuid())
  subjectName          String
  subjectNameSubHeading String
  subjectDuration      Int
  subjectSearchHeading String
  subjectDescription   String
  subjectPoints        Json     @default("[]") 
  subjectImage         String
  subjectPrice         Float
  subjectBoard         String
  subjectLanguage      String
  subjectTags          Json     @default("[]") 
  subjectGrade         Int      @default(10)
  subjectVerification  Boolean  @default(false)
  teacherVerification  Json     @default("[]") 
  createdAt            DateTime @default(now())
  
  // Relations
  teacherProfile      TeacherProfile  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  teacherId           String
  reviews             Review[]
  conversations       Conversation[]
  bookings            Booking[]
  savedSubjects       SavedSubject[]
  reports             Report[]
  stripePurchases     StripePurchases[]
  userSubjects        UserSubject[]
  
  @@unique([id, teacherId])
}

model Review {
  id          String        @id @default(cuid())
  title       String
  description String
  createdAt   DateTime      @default(now())
  upvotes     Int           @default(0)
  downvotes   Int           @default(0)
  studentId   String
  subjectId   String
  student     StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subject     Subject       @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  votes       ReviewVote[]

  @@index([studentId])
  @@index([subjectId])
}

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  student   StudentProfile  @relation("StudentConversations", fields: [studentId], references: [id], onDelete: Cascade)
  studentId String
  teacher   TeacherProfile  @relation("TeacherConversations", fields: [teacherId], references: [id], onDelete: Cascade)
  teacherId String
  subject   Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  subjectId String
  messages  ConversationMessage[]
}

model ConversationMessage {
  id             String       @id @default(cuid())
  senderId       String       // References User.id (can be student or teacher)
  senderType     MessageSenderType
  text           String
  messageId      String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  // Relations
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String
}

model Community {
  id                   String   @id @default(cuid())
  communityProfileImage String
  communityName        String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  // Relations
  users              CommunityUser[]
  messages           CommunityMessage[]
}

// Junction table for many-to-many relationship between StudentProfile/TeacherProfile and Community
model CommunityUser {
  id          String    @id @default(cuid())
  
  // Relations - one of studentId or teacherId must be present
  student     StudentProfile?   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId   String?
  teacher     TeacherProfile?   @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  teacherId   String?
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  
  @@unique([communityId, studentId])
  @@unique([communityId, teacherId])
  @@index([studentId])
  @@index([teacherId])
}

model CommunityMessage {
  id          String    @id @default(cuid())
  text        String
  messageId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations - only teachers can send messages
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  teacher     TeacherProfile @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  teacherId   String
}

model Booking {
  id                      String        @id @default(cuid())
  subjectId               String
  teacherId               String
  studentId               String
  bookingDate             DateTime?
  bookingTime             String?
  bookingStatus           BookingStatus @default(PENDING)
  bookingPrice            Float?
  bookingPaymentCompleted Boolean?      @default(false)
  bookingZoomUrl          String?       @default("")
  bookingZoomPassword     String?       @default("")
  bookingHours            Int?
  bookingMinutes          Int?
  bookingZoomId           Int?
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt

  subject                 Subject       @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  teacher                 TeacherProfile @relation("TeacherBookings", fields: [teacherId], references: [id], onDelete: Cascade)
  student                 StudentProfile @relation("StudentBookings", fields: [studentId], references: [id], onDelete: Cascade)
  stripePurchase          StripePurchases?
}

model SavedSubject {
  id        String  @id @default(cuid())
  subjectId String
  studentId String
  
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  student   StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([subjectId, studentId])
}

model ReviewVote {
  id        String   @id @default(cuid())
  studentId String
  reviewId  String
  voteType  String   // 'up' or 'down'
  createdAt DateTime @default(now())

  student   StudentProfile  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@unique([studentId, reviewId])
}

model BlockedTeacher {
  id         String   @id @default(cuid())
  studentId  String
  teacherId  String
  createdAt  DateTime @default(now())

  student    StudentProfile  @relation("BlockingStudent", fields: [studentId], references: [id], onDelete: Cascade)
  teacher    TeacherProfile  @relation("BlockedTeacher", fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([studentId, teacherId])
}

model Report {
  id                String       @id @default(cuid())
  studentId         String
  subjectId          String
  reportDescription String
  reportStatus      ReportStatus @default(PENDING)
  reportResolution  String?
  createdAt         DateTime     @default(now())

  student           StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  reportedSubject   Subject      @relation(fields: [subjectId], references: [id], onDelete: Cascade)
}

model StripePurchases {
  id                 String        @id @default(cuid())
  studentId          String
  subjectId          String
  purchaseDate       DateTime      @default(now())
  purchaseStatus     BookingStatus @default(PENDING)
  purchaseAmount     Int
  purchaseCurrency   String
  stripeCustomerId   String
  purchaseReceiptUrl String
  createdAt          DateTime      @default(now())
  bookingId          String        @unique

  student            StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subject            Subject       @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  booking            Booking       @relation(fields: [bookingId], references: [id])
}

model UserSubject {
  id        String @id @default(cuid())
  studentId String
  subjectId String

  student   StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([studentId, subjectId])
}
